{
  "env": {
    "node": true,
    "es2024": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "plugin:jest/recommended"],
  "parserOptions": {
    "ecmaVersion": 2024
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": ["warn"],
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "prefer-const": "error"
  },
  "ignorePatterns": ["node_modules", "coverage", "dist"]
}
